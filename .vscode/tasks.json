{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C Program",
      "type": "shell",
      "command": "gcc",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile C program using GCC"
    },
    {
      "label": "Run Executable",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}